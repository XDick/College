<?xml version="1.0" encoding="utf-8"?>


<ScrollView

    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
>





        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar_main"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <TextView
                 android:text="选择兴趣标签"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/interest_confirm_button"
                android:textColor="#fff"
                android:layout_margin="10dp"
                android:text="确定"
                android:background="@drawable/join_button_radius_false"/>


        </android.support.v7.widget.Toolbar>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <EditText
                android:id="@+id/tag_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/addmain"
                android:text="加主标签"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


            <Button
                android:id="@+id/addadd"
                android:text="加副标签"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <Button
                android:id="@+id/deletemain"
                android:text="删主标签"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <Button
                android:id="@+id/deleteadd"
                android:text="删副标签"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>



            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:text="主标签"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#eaeaea"
                android:layout_margin="10dp"/>
            <com.donkingliang.labels.LabelsView
                android:layout_margin="10dp"
                android:id="@+id/main_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelBackground="@drawable/label_bg"
                app:labelTextColor="@drawable/label_text_color"
                app:labelTextSize="14sp"
                app:labelTextPaddingBottom="5dp"
                app:labelTextPaddingLeft="10dp"
                app:labelTextPaddingRight="10dp"
                app:labelTextPaddingTop="5dp"
                app:lineMargin="10dp"
                app:wordMargin="10dp"
                app:selectType="SINGLE"
                app:maxSelect="0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#eaeaea"
                android:layout_margin="10dp"/>
            <com.donkingliang.labels.LabelsView
                android:layout_margin="10dp"
                android:id="@+id/setac_sub_labels1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelBackground="@drawable/label_bg"
                app:labelTextColor="@drawable/label_text_color"
                app:labelTextSize="14sp"
                android:visibility="gone"
                app:labelTextPaddingBottom="5dp"
                app:labelTextPaddingLeft="10dp"
                app:labelTextPaddingRight="10dp"
                app:labelTextPaddingTop="5dp"
                app:lineMargin="10dp"
                app:wordMargin="10dp"
                app:selectType="MULTI" />
            <com.donkingliang.labels.LabelsView
                android:layout_margin="10dp"
                android:id="@+id/setac_sub_labels2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelBackground="@drawable/label_bg"
                app:labelTextColor="@drawable/label_text_color"
                app:labelTextSize="14sp"
                android:visibility="gone"
                app:labelTextPaddingBottom="5dp"
                app:labelTextPaddingLeft="10dp"
                app:labelTextPaddingRight="10dp"
                app:labelTextPaddingTop="5dp"
                app:lineMargin="10dp"
                app:wordMargin="10dp"
                app:selectType="MULTI" />
            <com.donkingliang.labels.LabelsView
                android:layout_margin="10dp"
                android:id="@+id/setac_sub_labels3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelBackground="@drawable/label_bg"
                app:labelTextColor="@drawable/label_text_color"
                app:labelTextSize="14sp"
                android:visibility="gone"
                app:labelTextPaddingBottom="5dp"
                app:labelTextPaddingLeft="10dp"
                app:labelTextPaddingRight="10dp"
                app:labelTextPaddingTop="5dp"
                app:lineMargin="10dp"
                app:wordMargin="10dp"
                app:selectType="MULTI" />
            <com.donkingliang.labels.LabelsView
                android:layout_margin="10dp"
                android:id="@+id/setac_sub_labels4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelBackground="@drawable/label_bg"
                app:labelTextColor="@drawable/label_text_color"
                app:labelTextSize="14sp"
                android:visibility="gone"
                app:labelTextPaddingBottom="5dp"
                app:labelTextPaddingLeft="10dp"
                app:labelTextPaddingRight="10dp"
                app:labelTextPaddingTop="5dp"
                app:lineMargin="10dp"
                app:wordMargin="10dp"
                app:selectType="MULTI" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="副标签"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#eaeaea"
                android:layout_margin="10dp"/>


            <com.donkingliang.labels.LabelsView
                android:layout_margin="10dp"
                android:id="@+id/add_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelBackground="@drawable/label_bg"
                app:labelTextColor="@drawable/label_text_color"
                app:labelTextSize="14sp"
                app:labelTextPaddingBottom="5dp"
                app:labelTextPaddingLeft="10dp"
                app:labelTextPaddingRight="10dp"
                app:labelTextPaddingTop="5dp"
                app:lineMargin="10dp"
                app:wordMargin="10dp"
                app:selectType="MULTI"
                app:maxSelect="0" />







        </LinearLayout>








</LinearLayout>        </ScrollView>