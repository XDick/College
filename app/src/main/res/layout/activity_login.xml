<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background"/>


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72D72F31">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
           android:background="@drawable/findme"

            />

    </LinearLayout>










    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"

        android:layout_height="wrap_content"
        android:text="账号"

        android:textColor="#FFF"/>
    </FrameLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            android:textColorHint="#FFD4D4"
            app:counterMaxLength="11"
            android:id="@+id/textInputLayout_account">

    <EditText
        android:id="@+id/account_login"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:hint="用户名/手机号"
        android:textColor="#F8F8F8"
        android:textSize="14dp"
        android:inputType="text"
       />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"

                android:layout_height="wrap_content"
                android:text="密码"

                android:textColor="#FFF"/>
        </FrameLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FFD4D4"
            app:passwordToggleEnabled="true"

            app:passwordToggleDrawable="@drawable/passwordeye"
            android:id="@+id/textInputLayout_password"


            >
        <EditText
            android:id="@+id/password_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>


    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/login_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/login_button"
        android:text="登录"
        android:textColor="#FFF"
        />


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/tosignup_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_button"
            android:text="注册"
            android:textColor="#FFF" />

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/qq_button"
        android:background="?attr/selectableItemBackground"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="35dp">
<!--<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:text="第三方登录"
    android:textColor="#fff"/>-->
    <ImageView
        android:layout_marginTop="30dp"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/qq_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="一键QQ登录"
        android:textColor="#fff"/>
    </LinearLayout>
</FrameLayout>

</LinearLayout>

</FrameLayout>