<?xml version="1.0" encoding="utf-8"?>

<FrameLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dots="http://schemas.android.com/tools">





        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar_maindynamics"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >

            <ImageView
                  android:background="@drawable/findme"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="50dp" />


        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_marginBottom="50dp"
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                >
        <LinearLayout
           android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:id="@+id/dynamics_main_avatar"
                    />


               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/username_main_dynamics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="#0464e2"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:id="@+id/time_main_dynamics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="#6c6c6c"
                    />

               </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/content_main_dynamics"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="10dp"
                />

     <com.jaeger.ninegridimageview.NineGridImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:id="@+id/nineGrid"
                app:imgGap="4dp"
                app:showStyle="fill"
                app:singleImgSize="120dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="13dp"
                        android:layout_gravity="center_vertical"
                        android:text="赞:"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/avatar1"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/avatar2"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/avatar3"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/avatar4"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/avatar5"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3dp"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/avatar6"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3dp"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/likecount_text"
                        android:layout_margin="13dp"
                        android:layout_gravity="center_vertical|end"
                        />
                </LinearLayout>
            </LinearLayout>






        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复"
                android:textSize="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/dynamics_main_comment_count"/>






        </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/loading_layout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#484848"
                        android:textSize="20sp"
                        android:text="Loading"/>

                    <pl.tajchert.waitingdots.DotsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dots"

                        android:textSize="45sp"
                        android:textColor="#484848"
                        dots:autoplay="false"
                        dots:period="1000"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview_main_dynamics"/>
                </RelativeLayout>
        </LinearLayout>





</ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"

        android:id="@+id/maindynamics_startedit"
        android:background="@drawable/border_view">
        <EditText
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:hint="发表你的评论"
            android:id="@+id/maindynamics_edit_comment_edittext" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/send"
            android:id="@+id/maindynamics_send_comment_imageview"/>


    </LinearLayout>
</FrameLayout>

