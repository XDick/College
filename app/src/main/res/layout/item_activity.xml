<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:elevation="5dp"


    android:id="@+id/cardview_ac"
    app:cardBackgroundColor="#4e0748"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:layout_width = "match_parent"
      android:layout_height = "match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/cover_ac"/>

    <LinearLayout
       android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp">




        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/title_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"


            />

        <TextView
            android:id="@+id/place_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginBottom="8dp"

            />

        <TextView
            android:id="@+id/date_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="21dp"
          />

        <TextView
            android:id="@+id/time_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"

            />



        <TextView
            android:id="@+id/host_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="10dp"
            android:layout_marginBottom="3dp"
            />



        <TextView
            android:id="@+id/join_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:layout_marginBottom="3dp"

            android:textSize="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center|right"
        android:layout_margin="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/gps_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gps_ac"
            android:textColor="#fff"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_margin="12dp"
        android:id="@+id/tag_ac"
        android:textColor="#fff"
        android:textSize="10dp"
        android:layout_gravity="bottom|left"/>


</android.support.v7.widget.CardView>