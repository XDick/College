<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <ImageView
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
           android:background="@drawable/signup" />

    </LinearLayout>



    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="90dp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="用户名"
            android:textColor="#FFF" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="用户名"
            >

        <EditText
            android:id="@+id/account_signup"
            android:layout_width="200dp"
            android:textSize="14dp"
            android:textColor="#ffcdcd"
            android:maxLines="1"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="密码"
            android:textColor="#FFF"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:passwordToggleEnabled="true"

            app:passwordToggleDrawable="@drawable/passwordeye"

            android:hint="密码(至少8位)"
          >

        <EditText
            android:id="@+id/password_signup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#ffcdcd"
            android:maxLines="1"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <LinearLayout

        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="手机号"
            android:textColor="#ffffff"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="手机号"
            android:id="@+id/textInputLayout_phone_signup">

        <EditText
            android:id="@+id/phone_signup"
            android:layout_width="150dp"
            android:textSize="14dp"
            android:maxLines="1"
            android:layout_height="match_parent"
            />
    </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFF"
            android:id="@+id/sendidentity_button"
            android:text="验证码"/>
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="60dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="验证码"
            android:textColor="#ffffff"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:id="@+id/textInputLayout_identify_signup">
        <EditText
            android:id="@+id/identify_signup"
            android:layout_width="150dp"
            android:textSize="14dp"
            android:textColor="#ffcdcd"
            android:maxLines="1"
            android:layout_height="match_parent"
            />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:id="@+id/identify_confirm_button"
            android:text="确定"/>

    </LinearLayout>


    <Button
        android:id="@+id/select_school_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:text="选择学校"
        android:layout_margin="10dp"
        android:textColor="#FFF"/>


        <Button
            android:id="@+id/signup_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:text="注册"
            android:textColor="#FFF"/>

</LinearLayout>